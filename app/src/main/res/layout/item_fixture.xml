<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:weightSum="10"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/fixture_league"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/text_header"
                android:textStyle="bold"
                android:textAllCaps="true"/>

        <TextView
                android:layout_weight="2"
                android:padding="@dimen/smallest_margin"
                style="@style/backgroundRed"
                android:id="@+id/fixture_league_postponed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/text_postponed"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/fixture_venue_stadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

        <TextView
                android:id="@+id/fixture_venue_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/smallest_margin"
                android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal"
            android:weightSum="6">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

            <TextView
                    android:id="@+id/fixture_home_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="@color/text_header"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/fixture_away_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="@color/text_header"
                    android:textStyle="bold"/>

        </LinearLayout>

        <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/back_header"/>


        <LinearLayout
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="2">


            <TextView
                    android:textAlignment="center"
                    android:id="@+id/fixture_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:textSize="@dimen/bigger_text_size"
                    android:textColor="@color/text_header"

                    android:textStyle="bold"/>

            <TextView
                    android:textAlignment="center"
                    android:id="@+id/fixture_day_of_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:textSize="@dimen/big_text_size"
                    android:textColor="@color/text_header"
                    android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/back_header"/>

</LinearLayout>
